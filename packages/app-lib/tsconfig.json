{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./",
    "noLib": false,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
